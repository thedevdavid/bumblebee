{
  "extends": "@bumblebee/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/types/*": ["types/*"],
      "@/components/*": ["components/*"],
      "@/schema/*": ["schema/*"],
      "@/actions/*": ["actions/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
